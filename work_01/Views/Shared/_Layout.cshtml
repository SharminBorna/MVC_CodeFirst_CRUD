<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Toy House</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    @RenderSection("Styles", false)
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top shadow-sm border-bottom" style="background-color:mediumpurple">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/Images/1.jpg" style="width:40px; height:40px;" />
                @Html.ActionLink("Toy House", "Index", "Home", new { }, new { @class = "navbar-brand" })
            </a>
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { }, new { @class = "text-white nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Toys", "Index", "Toys", new { }, new { @class = "text-white nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Categories", "Index", "Categories", new { }, new { @class = "text-white nav-link" })</li>
                </ul>
                <ul class="nav navbar-nav ml-auto text-white">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Hello, " + User.Identity.Name + " !", "Index", " ", new { @class = "text-white nav-link" })</li>
                        <li class="active">@Html.ActionLink("Logout", "Logout", "Account", new { }, new { @class = "text-white nav-link" })</li>
                    }
                    else
                    {
                        <li class="active">@Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "text-white nav-link" })</li>
                        <li class="active">@Html.ActionLink("Login", "Login", "Account", new { }, new { @class = "text-white nav-link" })</li>
                    }

                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container">
        <footer>
            <p class="text-center">&copy; @DateTime.Now.Year - www.toyhouse.bd</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>