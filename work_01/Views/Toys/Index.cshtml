@model IEnumerable<work_01.ViewModels.ToyVM>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col">
        <h2 class="display-4">Toy List</h2>
        <hr />
        <div class="col">
            @using (Html.BeginForm())
            {
                <input type="text" name="search" class="form-control col-3 float-left mr-2" placeholder="Toys Name" />
                <button type="submit" class="btn btn-info"><i class="fa fa-search"></i> Search</button>
            }
        </div>

        @Html.Partial("_ToyList", Model)

    </div>
</div>