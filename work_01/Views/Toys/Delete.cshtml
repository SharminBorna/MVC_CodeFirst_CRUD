@model work_01.Models.Toys

@{
    ViewBag.Title = "Delete";
}

<h3 class="alert alert-danger mt-2">Are you sure you want to delete @Model.ToysName?</h3>
<div>
    <div class="row">
        <div class="col-md-12">
            <dl class="dl-horizontal col-md-6 border">
                <dt class="col-md-4 float-left">
                    @Html.DisplayNameFor(model => model.Categories.cName)
                </dt>

                <dd class="col-md-8">
                    @Html.DisplayFor(model => model.Categories.cName)
                </dd>

                <dt class="col-md-4 float-left">
                    @Html.DisplayNameFor(model => model.ToysName)
                </dt>

                <dd class="col-md-8">
                    @Html.DisplayFor(model => model.ToysName)
                </dd>

                <dt class="col-md-4 float-left">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd class="col-md-8">
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt class="col-md-4 float-left">
                    @Html.DisplayNameFor(model => model.StoreDate)
                </dt>

                <dd class="col-md-8">
                    @Html.DisplayFor(model => model.StoreDate)
                </dd>

                <dt class="col-md-4 float-left">
                    @Html.DisplayNameFor(model => model.PicturePath)
                </dt>

                <dd class="col-md-8">
                    <img src="@Url.Content(Model.PicturePath)" width="100" height="100" />
                </dd>

            </dl>
        </div>
    </div>
    <br />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-12 col-md-offset-4">
            <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
            <a href="@Url.Action("Index","Toys","")" class="btn btn-info"><i class="fa fa-backward"></i> Back to List</a>
        </div>
    }
</div>
